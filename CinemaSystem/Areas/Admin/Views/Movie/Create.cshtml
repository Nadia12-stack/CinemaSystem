@model IEnumerable<Movie>
@using CinemaSystem.ViewModels
@{
    var filter = ViewBag.Filter as FilterMovieVM;
    var categories = ViewBag.Categories as SelectList;
    var cinemas = ViewBag.Cinemas as SelectList;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<link rel="stylesheet" href="~/css/movie.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h4 class="fw-bold">🎬 All Movies</h4>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Movie/Create" class="btn btn-success">➕ Create</a>
        </div>
    </div>

    <!-- Filter Form -->
    <form method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="name" value="@filter?.name" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-4">
            <select name="categoryId" class="form-select">
                <option value="">-- Filter by Category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.Value @(filter?.categoryId?.ToString() == cat.Value ? "selected" : "")">@cat.Text</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select name="cinemaId" class="form-select">
                <option value="">-- Filter by Cinema --</option>
                @foreach (var cin in cinemas)
                {
                    <option value="@cin.Value @(filter?.cinemaId?.ToString() == cin.Value ? "selected" : "")">@cin.Text</option>
                }
            </select>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">🔍 Filter</button>
            <a href="/Admin/Movie/Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </form>

    <div id="movieTable">
        <div class="table-responsive scrollbar">
            <table class="table table-bordered table-striped fs-10 mb-0">
                <thead class="bg-200">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Cinemas</th>
                        <th>Actors</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Category?.Name</td>
                            <td>
                                @if (item.MovieCinemas.Any())
                                {
                                    @string.Join(", ", item.MovieCinemas.Select(c => c.Cinema.Name))
                                }
                                else
                                {
                                    <span class="text-muted">No Cinemas</span>
                                }
                            </td>
                            <td>
                                @if (item.MovieActors.Any())
                                {
                                    @string.Join(", ", item.MovieActors.Select(a => a.Actor.Name))
                                }
                                else
                                {
                                    <span class="text-muted">No Actors</span>
                                }
                            </td>
                            <td>@item.Price.ToString("c")</td>
                            <td>
                                <span class="badge @(item.Status ? "bg-success" : "bg-danger")">
                                    @(item.Status ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="dropdown font-sans-serif position-static">
                                    <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" data-bs-toggle="dropdown">
                                        <span class="fas fa-ellipsis-h fs-10"></span>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end border py-0">
                                        <div class="py-2">
                                            <a class="dropdown-item" href="/Admin/Movie/Details/@item.Id">View</a>
                                            <a class="dropdown-item" href="/Admin/Movie/Edit/@item.Id">Edit</a>
                                            <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="confirmDelete(@item.Id)">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&name=@filter?.name&categoryId=@filter?.categoryId&cinemaId=@filter?.cinemaId">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<!-- SweetAlert Delete Confirmation -->
<script>
    function confirmDelete(movieId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'This movie will be permanently deleted!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Movie/Delete/${movieId}`;
            }
        });
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["SuccessMessage"]',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}
