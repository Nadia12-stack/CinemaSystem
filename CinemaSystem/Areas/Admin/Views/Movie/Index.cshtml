@model IEnumerable<Movie>
<link rel="stylesheet" href="~/css/Glassmorphism.css"/>
@{
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalMovies = ViewBag.TotalMovies as int? ?? 0;
    var pageSize = 11;
    var from = ((currentPage - 1) * pageSize) + 1;
    var to = Math.Min(currentPage * pageSize, totalMovies);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<div class="container mt-4 mb-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h4 class="fw-bold text-dark">🎬 All Movies</h4>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Movie/Create" class="btn btn-success fw-semibold">➕ Create</a>
        </div>
    </div>

    <div class="table-responsive scrollbar p-3 rounded-4 shadow-lg glass-effect">
        <table class="table table-bordered table-hover table-striped fs-10 mb-0 text-center align-middle ">
            <thead class="bg-200 text-dark fw-semibold">
                <tr>
                    <th style="min-width: 60px;">#</th>
                    <th style="min-width: 150px;">Name</th>
                    <th style="min-width: 120px;">Category</th>
                    <th style="min-width: 200px;">Cinemas</th>
                    <th style="min-width: 200px;">Actors</th>
                    <th style="min-width: 100px;">Price</th>
                    <th style="min-width: 100px;">Status</th>
                    <th style="min-width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Category.Name</td>
                        <td class="text-wrap">
                            @if (item.MovieCinemas.Any())
                            {
                                @string.Join(", ", item.MovieCinemas.Select(c => c.Cinema.Name))
                            }
                            else
                            {
                                <span class="text-muted">No Cinemas</span>
                            }
                        </td>
                        <td class="text-wrap">
                            @if (item.MovieActors.Any())
                            {
                                @string.Join(", ", item.MovieActors.Select(a => a.Actor.Name))
                            }
                            else
                            {
                                <span class="text-muted">No Actors</span>
                            }
                        </td>
                        <td>@item.Price.ToString("c")</td>
                        <td>
                            <span class="badge @(item.Status ? "bg-success" : "bg-danger")">
                                @(item.Status ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="dropdown font-sans-serif position-static">
                                <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" data-bs-toggle="dropdown">
                                    <span class="fas fa-ellipsis-h fs-10"></span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end border py-0">
                                    <div class="py-2">
                                        <a class="dropdown-item" href="/Admin/Movie/Details/@item.Id">View</a>
                                        <a class="dropdown-item" href="/Admin/Movie/Edit/@item.Id">Edit</a>
                                        <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="confirmDelete(@item.Id)">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   
    <div class="row align-items-center mt-3">
        <div class="col">
            <p class="mb-0 fs-10 text-dark">
                <span>Showing @from to @to of @totalMovies entries</span>
                @if (currentPage < totalPages)
                {
                    <span class="mx-2"> &mdash; </span>
                    <a class="fw-semi-bold" href="?page=@totalPages">View all<span class="fas fa-angle-right ms-1"></span></a>
                }
            </p>
        </div>
        <div class="col-auto d-flex">
            <a class="btn btn-sm btn-primary @(currentPage == 1 ? "disabled" : "")" href="?page=@(currentPage - 1)">Previous</a>
            <a class="btn btn-sm btn-primary px-4 ms-2 @(currentPage == totalPages ? "disabled" : "")" href="?page=@(currentPage + 1)">Next</a>
        </div>
    </div>
</div>

</div>

<!-- SweetAlert Delete Confirmation -->
<script>
    function confirmDelete(movieId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'This movie will be permanently deleted!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Movie/Delete/${movieId}`;
            }
        });
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["SuccessMessage"]',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["SuccessMessage"]',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}
@if (TempData["error-notification"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: '@TempData["error-notification"]',
            confirmButtonColor: '#d33'
        });
    </script>
}