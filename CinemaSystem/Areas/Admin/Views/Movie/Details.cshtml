<script>
    document.addEventListener("DOMContentLoaded", function () {
        raterJs({
            starSize: 32,
            step: 0.5,
            rating: @Model.Movie.Rate,
            readOnly: true,
            element: document.querySelector("#movieRate")
        });
    });
</script>
