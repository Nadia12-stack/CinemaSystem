@model IEnumerable<Actor>
<link rel="stylesheet" href="~/css/actor.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">👥 All Actors</h4>
        <a href="/Admin/Actor/Create" class="btn btn-success">➕ Add Actor</a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Awards</th>
                <th>Status</th>
                <th>Birth Date</th>
                <th>Nationality</th>
                <th>Categories</th>
                <th>Social Links</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Awards</td>
                    <td>
                        @if (item.Status)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@item.BirthDate.ToString("yyyy/MM/dd")</td>
                    <td>@item.Nationality</td>
                    <td>
                        @if (item.ActorCategories.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var cat in item.ActorCategories)
                                {
                                    <li>@cat.Category.Name</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td>
                        @if (item.SocialLinks.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var link in item.SocialLinks)
                                {
                                    <li><a href="@link.Url" target="_blank">@link.Platform</a></li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td>
                        <a href="/Admin/Actor/Edit/@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <a href="/Admin/Actor/Delete/@item.Id" class="btn btn-sm btn-danger btn-delete">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
