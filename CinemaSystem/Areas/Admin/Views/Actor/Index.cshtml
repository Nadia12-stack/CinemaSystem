@model IEnumerable<Actor>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">👥 All Actors</h4>
        <a href="/Admin/Actor/Create" class="btn btn-success">➕ Add Actor</a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Status</th>
                <th>Nationality</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/images/actors/@item.Img" alt="@item.Name" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;" />
                    </td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.Status)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@item.Nationality</td>
                    <td>
                        <a href="/Admin/Actor/Edit/@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <a href="/Admin/Actor/Delete/@item.Id" class="btn btn-sm btn-danger btn-delete">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


