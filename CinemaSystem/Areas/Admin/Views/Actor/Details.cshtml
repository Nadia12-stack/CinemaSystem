@model Actor
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-4">
    <h4 class="mb-4 fw-bold">🧑‍🎤 Actor Details</h4>

    <!-- Basic Info -->
    <div class="card mb-3">
        <div class="card-header bg-body-tertiary">
            <h5 class="mb-0">Basic Info</h5>
        </div>
        <div class="card-body row">
            <div class="col-md-4">
                <img src="~/images/actors/@Model.Img" class="img-fluid rounded" />
            </div>
            <div class="col-md-8">
                <h5>@Model.Name</h5>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Awards:</strong> @Model.Awards</p>
                <p><strong>Birth Date:</strong> @Model.BirthDate.ToShortDateString()</p>
                <p><strong>Nationality:</strong> @Model.Nationality</p>
                <p>
                    <strong>Status:</strong>
                    <span class="badge @(Model.Status ? "bg-success" : "bg-danger")">
                        @(Model.Status ? "Active" : "Inactive")
                    </span>
                </p>
            </div>
        </div>
    </div>

    @* <!-- Categories -->
    @if (Model.ActorCategories != null && Model.ActorCategories.Any())
    {
        <div class="card mb-3">
            <div class="card-header bg-body-tertiary">
                <h5 class="mb-0">Categories</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-bordered fs-10">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Main Role</th>
                            <th>Experience</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cat in Model.ActorCategories)
                        {
                            <tr>
                                <td>@cat.Category?.Name</td>
                                <td>@cat.MainRole</td>
                                <td>@cat.ExperienceLevel</td>
                                <td>@cat.StartDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
 *@

    <!-- Movies -->
    @if (Model.MovieActors != null && Model.MovieActors.Any())
    {
        <div class="card mb-3">
            <div class="card-header bg-body-tertiary">
                <h5 class="mb-0">Movies</h5>
            </div>
            <div class="card-body">
                @foreach (var movie in Model.MovieActors)
                {
                    <span class="badge bg-info me-1">@movie.Movie.Name</span>
                }
            </div>
        </div>
    }
    <!-- Social Links -->
    @if (Model.SocialLinks != null && Model.SocialLinks.Any())
    {
        <div class="card mt-4 mb-3">
            <div class="card-header bg-body-tertiary d-flex justify-content-between">
                <h5 class="mb-0">Social Links</h5>
            </div>
            <div class="card-body fs-10 pb-0">
                <div class="row">
                    @foreach (var link in Model.SocialLinks)
                    {
                        <div class="col-sm-6 mb-3">
                            <div class="d-flex position-relative align-items-center mb-2">
                                <img class="d-flex align-self-center me-2 rounded-3" src="~/assets/img/logos/@link.Platform" alt="" width="50" />
                                <div class="flex-1">
                                    <h6 class="fs-9 mb-0">
                                        <a class="stretched-link" href="@link.Url" target="_blank">@link.Actor.Name</a>
                                    </h6>
                                    <p class="mb-1">@link.Actor.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        raterJs({
            starSize: 32,
            step: 0.5,

            readOnly: true,

        });
    });
</script>

