@model IEnumerable<Category>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2 class="fw-bold">All Categories</h2>
        <a href="/Admin/Category/Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Create
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <span class="badge @(item.Status ? "bg-success" : "bg-danger")">
                                    @(item.Status ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <a href="/Admin/Category/Edit/@item.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/Category/Delete/@item.Id" class="btn btn-sm btn-danger btn-delete" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

